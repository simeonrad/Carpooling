								.pt-creative-price-value 251
								.pt-creative-price-small 88
						.pt-creative-price-caption
							span(aria-hidden='false') per month 
							span(aria-hidden='true') per year
					.pt-creative-divider
					p.pt-creative-text Perfectly fits all types of clients
					ul.pt-creative-features
						li.icon.mdi.mdi-check
						li.icon.mdi.mdi-check
						li.icon.mdi.mdi-check
						li.icon.mdi.mdi-check
